{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "heart-api-route": {
        "ClusterId": "heart-api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "heart-api-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://127.0.0.1:8000/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
